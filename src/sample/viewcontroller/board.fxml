<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<BorderPane fx:id="stageGroup"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.viewcontroller.BoardController"
            stylesheets="@style.css"
            styleClass="root">

    <top>
        <HBox styleClass="top_navbar">
            <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>
            <Button styleClass="button" fx:id="heatMapButton" text="Heat Map" onAction="#heatMap"/>

        </HBox>
    </top>
    <center>
        <HBox fx:id="content" alignment="CENTER">
            <StackPane fx:id="holder" styleClass="canvas_background">
                <Canvas
                        fx:id="constCanvas"
                />
                <Canvas
                        fx:id="activeCanvas"
                />
                <Canvas
                        fx:id="passiveCanvas"
                />
            </StackPane>
        </HBox>
    </center>
</BorderPane>