<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx" alignment="CENTER" hgap="10" vgap="10" gridLinesVisible="true"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.viewcontroller.IntroController"
          stylesheets="@style.css"
          styleClass="root_start">

    <padding>
        <Insets top="250"/>
    </padding>

    <VBox styleClass="label_header_background"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          alignment="CENTER"
          spacing="15"
    >

        <padding>
            <Insets bottom="50" top="50" left="150" right="150"/>
        </padding>

        <!--<Label styleClass="label_header" text="FOREIGN PLANETS"/>-->
        <Label styleClass="label_header" text="INVASION SIMULATOR">
            <VBox.margin>
                <Insets>
                    <bottom>30</bottom>
                </Insets>
            </VBox.margin>
        </Label>

        <Button styleClass="button_big" text="Start Invasion!" onAction="#submit" alignment="CENTER"/>

        <Button styleClass="button_big" text="Credits" onAction="#credits" alignment="CENTER"/>


    </VBox>

</GridPane>
