    <VBox styleClass="label_header_background" GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER">

        <padding><Insets bottom="50" top="50" left="150" right="150"/></padding>

        <!--<Label styleClass="label_header" text="FOREIGN PLANETS"/>-->
